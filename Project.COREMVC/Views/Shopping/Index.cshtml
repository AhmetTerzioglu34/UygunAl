@model ShoppingPageVm


<h1>@TempData["message"]</h1>
<div class="row">
    <div class="col-md-3">

        <section class="panel">
            <header class="panel-heading">
                Kategoriler
                <div>
                    <a asp-action="Index" asp-controller="Shopping">Filtreyi sıfırla</a>
                </div>
            </header>
           
            <div class="panel-body">
                <ul class="nav prod-cat">
                    @foreach (CategoryForShoppingPureVm item in Model.CategoryForShoppingPureVms)
                    {
                        <li style="padding-top:30px">
                            <a asp-controller="Shopping" asp-action="Index" asp-route-categoryID="@item.ID">@item.CategoryName</a>
                        </li>
                    }
                </ul>
            </div>
        </section>

    </div>
    <div class="col-md-9">
        <section class="panel">
            <div class="panel-body">


                <div class="pull-right">
                    <ul class="pagination pagination-sm pro-page-list">

                        @if (TempData["catID"] != null)
                        {
                            <li>@Html.PagedListPager(Model.ProductForShoppingPureVms, page => Url.Action("Index", new { page, categoryID = TempData["catID"] }))</li>
                        }
                        else
                        {
                            @Html.PagedListPager(Model.ProductForShoppingPureVms, page => Url.Action("Index", new { page }))
                        }
                    </ul>
                </div>
            </div>
        </section>

        <div class="row product-list">


            @foreach (ProductForShoppingPureVm item in Model.ProductForShoppingPureVms)
            {
                
                <div class="col-md-4">
                    <section class="panel">
                        <div class="pro-img-box">
                            @if (item.ImagePath.Contains("nightlife"))
                            {
                                <a asp-action="ProductDetail" asp-controller="Shopping" asp-route-id="@item.ID" >
                                    <img src="/OuterImages/DenemeFoto.png" />
                                </a>
                                
                            }
                            else
                            {
                                       <a asp-action="ProductDetail" asp-controller="Shopping" asp-route-id="@item.ID">
                                            <img src="@item.ImagePath" />
                                       </a>
                            }

                            <a asp-action="AddToCart" asp-route-id="@item.ID" class="adtocart">
                                <i class="icon-shopping-cart"></i>
                            </a>
                          
                        </div>
                       
                        <div class="panel-body text-center">
                            <h4>
                                <a class="pro-title" title="@item.CategoryName">
                                    @item.ProductName
                                </a>
                            </h4>
                            <p class="price">$@item.UnitPrice</p>
                        </div>
                        
                    </section>
                </div>
               
            }


        </div>
    </div>
</div>


 @section Sepet {

    <li >
        <a asp-controller="Shopping" asp-action="CartPage"><i class="icon-shopping-cart"></i>Cart</a>
    </li>
}
 