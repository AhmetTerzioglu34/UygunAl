@model CreateCategoryPageVm


    <h1>
        Kategori yaratmaya hoşgeldiniz
        
    </h1>

    <form asp-action="CreateCategory" asp-controller="Category" method="post" class="p-3 w-75 m-auto">

    

        <div class="form-group">
            <label>
                <span asp-validation-for="CreateCategoryRequestModel.CategoryName" class="text-danger">

                </span>
            </label>
            <input asp-for="CreateCategoryRequestModel.CategoryName" class="form-control" placeholder="Kategori ismi giriniz" />
        </div>


        <div class="form-group">
            <label>
                <span asp-validation-for="CreateCategoryRequestModel.Description" class="text-danger">

                </span>
            </label>
            <input asp-for="CreateCategoryRequestModel.Description" class="form-control" placeholder="Açıklama giriniz" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary"> Kategori ekle</button>
        </div>

    </form>
